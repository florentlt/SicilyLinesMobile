<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SicilyLinesMobile.Connexion"
             BackgroundColor="White">
    <StackLayout Padding="10">
        <!-- Username Input -->
        <Frame Padding="5" CornerRadius="10" BackgroundColor="White" Margin="0,10">
            <Entry x:Name="email" Placeholder="Email" TextColor="Black" FontSize="14"/>
        </Frame>

        <!-- Password Input -->
        <Frame Padding="5" CornerRadius="10" BackgroundColor="White" Margin="0,10">
            <Entry x:Name="pass" Placeholder="Mot de passe" IsPassword="True" TextColor="Black" FontSize="14"/>
        </Frame>

        <!-- Login Button -->
        <Button Text="Se connecter" BackgroundColor="OrangeRed" TextColor="White" 
            FontSize="16" Padding="10" Margin="0,20"
            Clicked="Button_Clicked"/>

        <!-- Error Message Label -->
        <Label x:Name="errorMessage" TextColor="Red" IsVisible="False" FontSize="14" />
    </StackLayout>
</ContentPage>
