<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SicilyLinesMobile.Views.MainPage"
             Title="Ma page"
             BackgroundColor="White">

    <NavigationPage.TitleView>
        <Grid ColumnDefinitions="*, Auto" Padding="10,0">
            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                <Image Source="logo.png"
                       WidthRequest="40"
                       HeightRequest="40"
                       VerticalOptions="Center"
                       Aspect="AspectFit" />
                <Label Text="SicilyLines"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="MediumPurple"
                       VerticalOptions="Center" />
            </HorizontalStackLayout>

            <Button Grid.Column="1"
                    Text="Déconnexion"
                    FontSize="14"
                    Padding="10, 5"
                    BackgroundColor="Transparent"
                    TextColor="OrangeRed"
                    Clicked="OnLogoutButtonClicked" />
        </Grid>
    </NavigationPage.TitleView>

    <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <Image Source="vue.png" 
               Aspect="AspectFill" 
               HorizontalOptions="FillAndExpand" 
               VerticalOptions="FillAndExpand"
               AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
               AbsoluteLayout.LayoutFlags="All"/>

        <!-- Contenu superposé : titre et boutons -->
        <StackLayout Padding="20" 
                     Spacing="30" 
                     VerticalOptions="CenterAndExpand"
                     AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 1"
                     AbsoluteLayout.LayoutFlags="All">
            <!-- Titre principal -->
            <Label Text="Bienvenue sur votre page" 
                   FontSize="28" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" 
                   TextColor="White"/>

            <!-- Conteneur des boutons -->
            <StackLayout Orientation="Horizontal" Spacing="30" HorizontalOptions="Center">
                <!-- Bouton pour les informations -->
                <Button x:Name="InfoButton"
                        Text="Mes Informations"
                        BackgroundColor="LightGreen"
                        TextColor="White"
                        CornerRadius="15"
                        Padding="15"
                        FontSize="20"
                        Clicked="OnInfoButtonClicked"
                        WidthRequest="200"/>

                <!-- Bouton pour les réservations -->
                <Button x:Name="ReservationsButton"
                        Text="Mes Réservations"
                        BackgroundColor="LightBlue"
                        TextColor="White"
                        CornerRadius="15"
                        Padding="15"
                        FontSize="20"
                        Clicked="OnReservationsButtonClicked"
                        WidthRequest="200"/>
            </StackLayout>

        </StackLayout>
    </AbsoluteLayout>
</ContentPage>
